[user]
	name = Penghui Liao
	email = liaoishere@gmail.com
	signingkey = B847939A95E9B47A
[color]
	ui = true
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	co = checkout
	ci = commit -s
	br = branch
	st = status
	up = rebase
	last = log -1 HEAD
	unstage = reset HEAD --
	amend = commit --amend --reuse-message=HEAD
	n = !git --no-pager
[gitreview]
	username = LiaoPenghui
[push]
	default = simple
[core]
    excludesfile = /Users/Liao/.gitignore_global
	autocrlf = input
	pager = more -r
    pager = less -+F -+X
	editor = /usr/local/bin/vim
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[format]
[commit]
	gpgsign = true
